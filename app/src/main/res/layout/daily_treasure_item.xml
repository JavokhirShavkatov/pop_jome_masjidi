<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="6dp"
    app:cardElevation="0dp"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="20dp"
    >

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/treasure_img"
            android:layout_width="370dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/blue"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_below="@+id/treasure_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/treasure_title"
            android:text="This Masjid is located in | UAE |"
            android:fontFamily="@font/opensans_bold"
            android:textSize="19sp" />

        <TextView
            android:layout_marginStart="5dp"
            android:layout_below="@+id/treasure_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masjid in uae"
            android:id="@+id/treasure_subtitle"
            android:fontFamily="@font/opensans_light"
            android:textSize="14sp" />

    </RelativeLayout>




</androidx.cardview.widget.CardView>