<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.TasbihActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/colorAccent"
            >

            <ImageView
                android:id="@+id/back_To_First_Activity"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:backgroundTint="@color/black"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tasbeh"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/reset_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                android:src="@drawable/ic_baseline_refresh_24"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/uae"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/counting_num"
                    android:textSize="50sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/line"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/count_num"
                    android:textSize="40sp"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/zikr_txtm"
            android:text="Allohu Akbar"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/add_btn"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_add_24"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>